if(BGM){
	switch(global.BGM){
		case 0:
			image_index = 0;
			break;
		case 0.25:
			image_index = 1;
			break;
		case 0.5:
			image_index = 2;
			break;
		case 0.75:
			image_index = 3;
			break;
		case 1:
			image_index = 4;
			break;
	}
}

